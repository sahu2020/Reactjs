  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch website",
          "request": "launch",
          "type": "pwa-chrome",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceFolder}"
      },

      {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "program": "${file}",
          "outFiles": [
              "${workspaceRoot}/out/**/*.js"
          ]
      }
  ]
}
